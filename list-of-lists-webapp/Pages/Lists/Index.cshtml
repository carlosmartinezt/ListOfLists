@page
@model list_of_lists_webapp.Pages.Lists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lists</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.List[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].ParentListId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].CreatorUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].DateModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.List) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentListId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
